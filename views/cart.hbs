<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Cours name</th>
                    <th>Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button class="btn btn-small js-remove" data-csrf="{{@root.csrf}}" data-id="{{id}}">Delete</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Get order</button>
        </form>
    {{else}}
        <p>Cart is empty</p>
    {{/if}}
</div>